        <servlet-name>OrderStatus</servlet-name>
        <url-pattern>/order-status</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VendorLogin</servlet-name>
        <jsp-file>/vendor-login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendorLogin</servlet-name>
        <url-pattern>/vendor-login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VendorLoginServlet</servlet-name>
