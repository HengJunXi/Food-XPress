        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login-servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/home.jsp</jsp-file>
    </servlet>
